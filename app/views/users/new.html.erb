<div class="container">
<%= render partial: "alert" %>
<div class="central">
  <div class="form bordered padded shadowed">
    <h3>Inscrição</h3>
    <%= form_for @user do |f| %>
      <%= form_error_notification(@user) %>

      <div class="field">
        <div class="label">
          <%= f.label "Nome de usuário" %><br />
        </div>
        <%= f.text_field :username %>
      </div>
      <div class="field">
        <div class="label">
          <%= f.label "Nome completo" %><br />
        </div>
        <%= f.text_field :fullname %>
      </div>
      <div class="field">
        <div class="label">
          <%= f.label "Email" %><br />
        </div>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <div class="label">
          <%= f.label "Senha" %><br />
        </div>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <div class="label">
          <%= f.label "Repita a senha" %><br />
        </div>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="actions"><%= f.submit "Enviar", class:"btn" %></div>
    <% end %>

  </div>
  </div>
  <div class="central" style="margin-top:10px;">
    <%= back_link %>
  </div>
  
</div>